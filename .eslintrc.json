{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "no-magic-numbers": "warn",
        "no-console": "warn",
        "no-debugger": "warn",
        "semi": "off",
        "indent": ["error", "tab"],
        "max-len": ["error", { "code": 80 }],
        "no-mixed-spaces-and-tabs": "error",
        "no-trailing-spaces": "error"
    }
}